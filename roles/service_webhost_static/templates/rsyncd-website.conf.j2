use chroot = no
read only = no
syslog facility = local4
syslog tag = {{  ( item.fqdn | split('.') )[0] }}

[{{ ( item.fqdn | split('.'))[0] }}]
path = /var/www/{{ item.fqdn }}

{% if item['subsites'] is defined %}
{% for subsite in item['subsites'] %}
[{{ subsite }}]
path = /var/www/{{ item.fqdn }}/{{ subsite }}
{% endfor %}
{% endif %}
