<network>
	<name>{{ envname }}</name>
	<bridge name="{{ vbridge }}" stp="off" delay="0" />
	<forward mode="nat">
		<nat ipv6='yes'>
			<port start='1024' end='65535' />
		</nat>
	</forward>
	<domain name="{{ internal_domain }}" />
	<dns enable="yes" />
	<ip family="ipv4" address="{{ v4natnet_gwcidr | ansible.utils.ipaddr('address') }}" prefix="{{ v4natnet_gwcidr | ansible.utils.ipaddr('prefix') }}">
		<dhcp>
			<range start="{{ v4natnet_gwcidr | ansible.utils.ipaddr('next_usable') }}" end="{{ v4natnet_gwcidr | ansible.utils.ipaddr('last_usable') }}" />
		</dhcp>
	</ip>
	<ip family="ipv6" address="{{ v6natnet_ula | ansible.utils.ipaddr('address') }}" prefix="64">
		<dhcp>
			<range start="{{ v6natnet_ula | ansible.utils.ipaddr('next_usable') }}" end="{{ v6natnet_ula | ansible.utils.next_nth_usable(200) }}" />
		</dhcp>
	</ip>
</network>
