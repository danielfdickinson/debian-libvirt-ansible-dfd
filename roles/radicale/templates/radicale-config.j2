# -*- mode: conf -*-
# vim:ft=cfg

[server]
hosts = 0.0.0.0:{{ gdav_port }}, [::]:{{ gdav_port }}
ssl = True
certificate = {{ host_private_cert_cert_file }}
key = {{ host_private_cert_key_file }}-radicale
certificate_authority = {{ env_conn_admin[envname]['private_ca_cert_file'] }}

[auth]
type = htpasswd
htpasswd_filename = /etc/radicale/users
htpasswd_encryption = bcrypt
realm = Radicale - Password Required

[rights]

# Rights backend
# Value: none | authenticated | owner_only | owner_write | from_file
type = owner_only

# File for rights management from_file
# file = /etc/radicale/rights

[web]
type = radicale_infcloud
infcloud_config = globalTimeZone='America/Toronto';

[logging]
# Threshold for the logger
# Value: debug | info | warning | error | critical
#level = warning

# Don't include passwords in logs
#mask_passwords = True
